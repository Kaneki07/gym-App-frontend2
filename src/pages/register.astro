---
// src/pages/register.astro
import Layout from '../layouts/Layout.astro';
import RegisterForm from '../components/RegisterForm';
---

<Layout title="Únete a la Élite | Gym App">
  <main class="min-h-screen flex items-center justify-center bg-black py-8 px-4 sm:px-6">
    <div class="w-full max-w-5xl grid md:grid-cols-2 bg-transparent md:bg-gray-900 rounded-[2.5rem] overflow-hidden shadow-[0_0_30px_rgba(220,38,38,0.15)] md:border md:border-red-600/20">
      
      <div class="hidden md:flex flex-col justify-center p-12 bg-gradient-to-br from-gray-900 to-black border-r border-gray-800">
        <h2 class="text-4xl lg:text-5xl font-black text-white leading-[1.1] uppercase mb-6 tracking-tighter italic">
          Tu <span class="text-red-600 block drop-shadow-[0_0_10px_rgba(220,38,38,0.5)]">Transformación</span> comienza aquí.
        </h2>
        <ul class="space-y-4 text-gray-400 font-medium">
          <li class="flex items-center gap-3">
            <span class="w-5 h-5 bg-red-600/20 text-red-600 rounded-full flex items-center justify-center text-xs font-bold shadow-[0_0_10px_rgba(220,38,38,0.3)]">✓</span> Rutinas de alta intensidad
          </li>
          <li class="flex items-center gap-3">
            <span class="w-5 h-5 bg-red-600/20 text-red-600 rounded-full flex items-center justify-center text-xs font-bold shadow-[0_0_10px_rgba(220,38,38,0.3)]">✓</span> Seguimiento en tiempo real
          </li>
          <li class="flex items-center gap-3">
            <span class="w-5 h-5 bg-red-600/20 text-red-600 rounded-full flex items-center justify-center text-xs font-bold shadow-[0_0_10px_rgba(220,38,38,0.3)]">✓</span> Comunidad de atletas
          </li>
        </ul>
      </div>

      <div class="p-0 md:p-12 flex flex-col justify-center items-center bg-transparent md:bg-gray-900">
        <RegisterForm client:load />
      </div>

    </div>
  </main>
</Layout>