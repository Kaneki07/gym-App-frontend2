---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Asignar Dieta | Panel Coach">
    <div class="min-h-screen flex items-center justify-center px-4 py-12">
        <div class="w-full max-w-2xl">
            <a href="/dashboard" class="inline-flex items-center text-gray-500 hover:text-red-500 text-[10px] font-black uppercase tracking-widest mb-8 transition-colors">
                <span class="mr-2">←</span> Volver al Dashboard
            </a>

            <div class="bg-black/60 backdrop-blur-xl border border-red-600/30 p-8 sm:p-12 rounded-[3rem] shadow-[0_20px_50px_rgba(0,0,0,0.5)]">
                <div class="text-center mb-10">
                    <h2 class="text-3xl sm:text-4xl font-black text-white uppercase italic tracking-tighter">
                        Asignar <span class="text-red-600">Dieta</span>
                    </h2>
                    <p class="text-gray-500 text-[10px] uppercase tracking-[0.2em] font-black mt-2">Configuración de Nutrición para Atleta</p>
                </div>

                <form id="dieta-form" class="space-y-6">
                    <div class="group">
                        <label class="block text-gray-500 text-[9px] font-black uppercase tracking-widest mb-2 ml-2 group-focus-within:text-red-600 transition-colors">
                            ID Único del Atleta
                        </label>
                        <input
                            type="text"
                            id="userId"
                            placeholder="Ej: 65a1234567890..."
                            required
                            class="w-full bg-gray-900/40 border border-gray-800 rounded-2xl py-4 px-5 text-white focus:border-red-600 focus:ring-1 focus:ring-red-600 outline-none transition-all text-sm"
                        />
                    </div>

                    <div class="group">
                        <label class="block text-gray-500 text-[9px] font-black uppercase tracking-widest mb-2 ml-2 group-focus-within:text-red-600 transition-colors">
                            Título de la Dieta
                        </label>
                        <input
                            type="text"
                            id="title"
                            placeholder="Ej: Plan Hipertrofia - Mes 1"
                            required
                            class="w-full bg-gray-900/40 border border-gray-800 rounded-2xl py-4 px-5 text-white focus:border-red-600 focus:ring-1 focus:ring-red-600 outline-none transition-all text-sm"
                        />
                    </div>

                    <div class="group">
                        <label class="block text-gray-500 text-[9px] font-black uppercase tracking-widest mb-2 ml-2 group-focus-within:text-red-600 transition-colors">
                            Detalle de Comidas (Formato Libre)
                        </label>
                        <textarea
                            id="content"
                            rows="8"
                            placeholder="Desayuno: 4 huevos...&#10;Almuerzo: 200g Pollo..."
                            required
                            class="w-full bg-gray-900/40 border border-gray-800 rounded-2xl py-4 px-5 text-white focus:border-red-600 focus:ring-1 focus:ring-red-600 outline-none transition-all text-sm resize-none"
                        ></textarea>
                        <p class="mt-2 ml-2 text-[9px] text-gray-600 italic">El sistema limpiará automáticamente saltos de línea extraños.</p>
                    </div>

                    <div id="status-msg" class="hidden p-4 rounded-xl text-[10px] text-center font-black uppercase tracking-wider border animate-in fade-in zoom-in"></div>

                    <button
                        type="submit"
                        id="submit-btn"
                        class="w-full bg-red-600 text-white font-black py-5 rounded-2xl uppercase tracking-[0.2em] text-xs shadow-xl hover:bg-red-700 active:scale-[0.98] transition-all disabled:opacity-50"
                    >
                        Publicar Dieta al Atleta
                    </button>
                </form>
            </div>
        </div>
    </div>
</Layout>

<script>
    const form = document.getElementById('dieta-form') as HTMLFormElement;
    const statusMsg = document.getElementById('status-msg');
    const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;

    // Protección de ruta (Solo Coaches)
    const user = JSON.parse(localStorage.getItem('user') || '{}');
    if (!user || user.role?.toLowerCase() !== 'coach') {
        window.location.href = '/dashboard';
    }

    form?.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const userId = (document.getElementById('userId') as HTMLInputElement).value.trim();
        const title = (document.getElementById('title') as HTMLInputElement).value.trim();
        const content = (document.getElementById('content') as HTMLTextAreaElement).value.trim();

        // Mostrar cargando
        if (statusMsg) {
            statusMsg.textContent = "Procesando y validando formato...";
            statusMsg.className = "p-4 rounded-xl text-[10px] text-center font-black uppercase tracking-wider border bg-gray-600/10 text-gray-400 border-gray-600/20";
            statusMsg.classList.remove('hidden');
        }
        submitBtn.disabled = true;

        try {
            // EL SECRETO: JSON.stringify maneja los saltos de línea (\n) 
            // y las comillas por nosotros para que el backend no falle.
            const payload = {
                title: title,
                content: content
            };

            const response = await fetch(`https://gym-app-backend-2-pv91.onrender.com/dietas/user/${userId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Authorization': `Bearer ${localStorage.getItem('token')}` // Por si tu backend pide el token
                },
                body: JSON.stringify(payload)
            });

            const data = await response.json();

            if (response.ok) {
                if (statusMsg) {
                    statusMsg.textContent = "✅ Dieta asignada con éxito";
                    statusMsg.className = "p-4 rounded-xl text-[10px] text-center font-black uppercase tracking-wider border bg-green-600/10 text-green-500 border-green-600/20 shadow-[0_0_15px_rgba(34,197,94,0.1)]";
                }
                form.reset();
            } else {
                throw new Error(data.message || "Error al subir la dieta");
            }

        } catch (error: any) {
            if (statusMsg) {
                statusMsg.textContent = `❌ Error: ${error.message}`;
                statusMsg.className = "p-4 rounded-xl text-[10px] text-center font-black uppercase tracking-wider border bg-red-600/10 text-red-500 border-red-600/20";
            }
        } finally {
            submitBtn.disabled = false;
        }
    });
</script>