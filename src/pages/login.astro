---
import Layout from '../layouts/Layout.astro';
import LoginForm from '../components/loginForm'; // Importación corregida con 'L' mayúscula
---

<Layout title="Iniciar Sesión | Gym App">
  <main class="min-h-screen flex items-center justify-center px-4 py-12 relative overflow-hidden bg-black">
    
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-full max-w-[500px] h-[500px] bg-red-600/10 rounded-full blur-[120px] -z-10 animate-pulse"></div>
    <div class="absolute -bottom-20 -left-20 w-80 h-80 bg-red-900/5 rounded-full blur-[100px] -z-10"></div>
    
    <LoginForm client:load />
  </main>
</Layout>