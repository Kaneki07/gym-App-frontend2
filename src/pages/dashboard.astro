---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Panel de Control">
  <div class="max-w-7xl mx-auto px-6 py-12">
    <header class="mb-12">
      <h1 class="text-4xl md:text-6xl font-black uppercase tracking-tighter">
        Bienvenido, <span class="text-red-600" id="welcome-name">Atleta</span>
      </h1>
      
      <div class="mt-6 flex items-center gap-4">
        <div class="flex flex-col">
            <span class="text-[10px] text-gray-500 font-bold uppercase tracking-[0.2em] mb-1">Tu objetivo actual</span>
            <div class="flex items-center gap-3">
                <span id="current-status" class="text-white font-black uppercase italic tracking-tighter text-xl">
                    Cargando...
                </span>
                
                <div class="relative inline-block text-left" id="status-menu-container">
                    <button 
                        id="open-status-menu"
                        class="bg-gray-900 hover:bg-red-600 text-gray-400 hover:text-white px-4 py-1.5 rounded-full border border-gray-800 text-[10px] font-bold uppercase tracking-widest transition-all flex items-center gap-2"
                    >
                        Cambiar estado
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M19 9l-7 7-7-7" />
                        </svg>
                    </button>

                    <div 
                        id="status-dropdown" 
                        class="hidden absolute left-0 mt-2 w-48 bg-black border border-gray-800 rounded-xl shadow-2xl z-50 overflow-hidden backdrop-blur-xl"
                    >
                        <button class="status-option w-full text-left px-4 py-3 text-[10px] font-bold uppercase tracking-widest text-gray-400 hover:bg-red-600 hover:text-white transition-colors border-b border-gray-900" data-status="Mantenimiento">
                            Mantenimiento
                        </button>
                        <button class="status-option w-full text-left px-4 py-3 text-[10px] font-bold uppercase tracking-widest text-gray-400 hover:bg-red-600 hover:text-white transition-colors border-b border-gray-900" data-status="Fase de Definici贸n">
                            Fase de Definici贸n
                        </button>
                        <button class="status-option w-full text-left px-4 py-3 text-[10px] font-bold uppercase tracking-widest text-gray-400 hover:bg-red-600 hover:text-white transition-colors" data-status="Fase de Volumen">
                            Fase de Volumen
                        </button>
                    </div>
                </div>
            </div>
        </div>
      </div>
    </header>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <a href="/rutinas" class="group bg-gray-900/30 border border-gray-800 p-8 rounded-3xl hover:border-red-600 transition-all hover:translate-y-[-5px]">
        <div class="w-12 h-12 bg-red-600/10 rounded-2xl flex items-center justify-center mb-6 group-hover:bg-red-600 transition-colors">
            <span class="text-2xl"></span>
        </div>
        <h3 class="text-xl font-bold text-white mb-2 uppercase italic">Rutinas</h3>
        <p class="text-gray-500 text-sm">Entrenamientos personalizados seg煤n tu nivel.</p>
      </a>

      <a href="/planes" class="group bg-gray-900/30 border border-gray-800 p-8 rounded-3xl hover:border-red-600 transition-all hover:translate-y-[-5px]">
        <div class="w-12 h-12 bg-red-600/10 rounded-2xl flex items-center justify-center mb-6 group-hover:bg-red-600 transition-colors">
            <span class="text-2xl"></span>
        </div>
        <h3 class="text-xl font-bold text-white mb-2 uppercase italic">Alimentaci贸n</h3>
        <p class="text-gray-500 text-sm">Planes nutricionales para ganar masa o definir.</p>
      </a>

      <a href="/calculadora" class="group bg-gray-900/30 border border-gray-800 p-8 rounded-3xl hover:border-red-600 transition-all hover:translate-y-[-5px]">
        <div class="w-12 h-12 bg-red-600/10 rounded-2xl flex items-center justify-center mb-6 group-hover:bg-red-600 transition-colors">
            <span class="text-2xl"></span>
        </div>
        <h3 class="text-xl font-bold text-white mb-2 uppercase italic">Calculadora</h3>
        <p class="text-gray-500 text-sm">Porcentaje de grasa, masa muscular e IMC.</p>
      </a>
    </div>
  </div>
</Layout>

<script>
  // L贸gica de Usuario y Bienvenida
  const user = JSON.parse(localStorage.getItem('user') || '{}');
  const welcomeName = document.getElementById('welcome-name');
  if (user.name && welcomeName) {
    welcomeName.textContent = user.name.split(' ')[0];
  }

  // L贸gica del Men煤 de Estado
  const statusDisplay = document.getElementById('current-status');
  const menuBtn = document.getElementById('open-status-menu');
  const dropdown = document.getElementById('status-dropdown');
  const options = document.querySelectorAll('.status-option');

  // Abrir/Cerrar men煤
  menuBtn?.addEventListener('click', (e) => {
    e.stopPropagation();
    dropdown?.classList.toggle('hidden');
  });

  // Cerrar al hacer clic fuera
  document.addEventListener('click', () => {
    dropdown?.classList.add('hidden');
  });

  // Guardar y Actualizar Estado
  function setStatus(newStatus: string) {
    if (statusDisplay) {
        statusDisplay.textContent = newStatus;
        localStorage.setItem(`status_${user.id}`, newStatus);
    }
    dropdown?.classList.add('hidden');
  }

  // Inicializar estado guardado
  const savedStatus = localStorage.getItem(`status_${user.id}`) || 'Fase de Volumen';
  if (statusDisplay) statusDisplay.textContent = savedStatus;

  // Asignar eventos a las opciones
  options.forEach(option => {
    option.addEventListener('click', () => {
        const val = (option as HTMLElement).dataset.status;
        if (val) setStatus(val);
    });
  });
</script>