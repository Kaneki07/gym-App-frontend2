---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Bitácora de Entrenamiento | Gym App">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 py-8">
    
    <header class="mb-10 flex flex-col md:flex-row md:items-end justify-between gap-6">
      <div class="space-y-4">
        <a href="/dashboard" class="group inline-flex items-center gap-2 text-gray-400 hover:text-white transition-colors duration-300 text-xs font-bold uppercase tracking-widest">
            <div class="bg-gray-800 p-1.5 rounded-full group-hover:bg-red-600 transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M15 19l-7-7 7-7" />
                </svg>
            </div>
            Volver al pane
        </a>
        
        <div>
            <h1 class="text-3xl md:text-5xl font-black uppercase tracking-tighter text-white italic leading-none">
            Bitácora <span class="text-transparent bg-clip-text bg-gradient-to-r from-red-500 to-red-700">Semanal</span>
            </h1>
            <p class="text-gray-400 text-sm md:text-base mt-1 font-medium">Registra tus cargas y supera tus límites.</p>
        </div>
      </div>
      
      <div class="flex gap-4">
        <button id="btn-save" class="w-full md:w-auto bg-white text-black hover:bg-red-600 hover:text-white px-8 py-3 rounded-xl font-black uppercase italic tracking-tighter transition-all duration-300 shadow-lg hover:shadow-red-900/20 active:scale-95 flex items-center justify-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4" />
            </svg>
            Guardar Progreso
        </button>
      </div>
    </header>

    <div id="bitacora-container" class="grid gap-8">
        <div class="text-white text-center py-20 opacity-50 italic animate-pulse">Cargando datos...</div>
    </div>
  </div>
</Layout>

<script>
    // --- LÓGICA DEL FRONTEND ---
    const API_URL = 'https://gym-app-backend-2-pv91.onrender.com'; 
    const userStr = localStorage.getItem('user');
    const user = userStr ? JSON.parse(userStr) : null;
    
    if (!user) window.location.href = '/login';

    const days = ['Lunes', 'Martes', 'Miércoles', 'Jueves', 'Viernes', 'Sábado', 'Domingo'];
    let bitacoraData = {};
    let isUpdate = false; 

    // Inicializar estructura vacía
    days.forEach(day => {
        bitacoraData[day] = [];
    });

    const container = document.getElementById('bitacora-container');

    async function loadBitacora() {
        try {
            const res = await fetch(`${API_URL}/bitacora/${user.id}`);
            const result = await res.json();
            
            if (result.data && result.data.content) {
                // Hacemos merge por si agregamos campos nuevos a registros viejos
                bitacoraData = { ...bitacoraData, ...result.data.content };
                isUpdate = true; 
            }
            renderBitacora();
        } catch (error) {
            console.error("Error cargando bitácora", error);
            renderBitacora();
        }
    }

    function renderBitacora() {
        if (!container) return;
        container.innerHTML = '';

        days.forEach(day => {
            const daySection = document.createElement('div');
            // Diseño de tarjeta "Glassmorphism" sutil
            daySection.className = "bg-[#111] border border-white/10 rounded-2xl overflow-hidden shadow-sm hover:border-white/20 transition-colors";
            
            daySection.innerHTML = `
                <div class="px-6 py-4 border-b border-white/5 flex justify-between items-center bg-white/5">
                    <h3 class="text-lg md:text-xl font-black text-white uppercase italic tracking-tight flex items-center gap-2">
                        <span class="w-2 h-2 rounded-full bg-red-600 inline-block"></span>
                        ${day}
                    </h3>
                    <button onclick="window.addExercise('${day}')" class="text-[11px] font-bold uppercase tracking-widest text-gray-400 hover:text-red-500 transition-colors flex items-center gap-1">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                        </svg>
                        Añadir
                    </button>
                </div>
                <div id="list-${day}" class="p-4 space-y-3">
                    ${bitacoraData[day].length === 0 ? '<p class="text-gray-600 text-xs text-center py-2 italic">Descanso o sin registro.</p>' : ''}
                </div>
            `;

            container.appendChild(daySection);
            renderExercises(day);
        });
    }

    function renderExercises(day) {
        const list = document.getElementById(`list-${day}`);
        if (!list) return;
        list.innerHTML = '';

        bitacoraData[day].forEach((item, index) => {
            const div = document.createElement('div');
            // Grid layout
            div.className = "grid grid-cols-12 gap-2 md:gap-4 items-end bg-black/40 p-3 rounded-xl border border-white/5 hover:border-red-500/30 transition-colors group";
            
            const weightVal = item.weight || ''; 

            div.innerHTML = `
                <div class="col-span-12 md:col-span-5 mb-2 md:mb-0">
                    <label class="text-[9px] text-gray-500 uppercase font-bold tracking-wider ml-1">Ejercicio</label>
                    <input type="text" placeholder="Ej: Press Banca" value="${item.name}" 
                        onchange="window.updateField('${day}', ${index}, 'name', this.value)"
                        class="w-full bg-transparent border-b border-gray-700 text-white font-bold placeholder:text-gray-700 focus:outline-none focus:border-red-600 text-sm py-1 transition-colors">
                </div>

                <div class="col-span-3 md:col-span-2">
                    <label class="text-[9px] text-gray-500 uppercase font-bold tracking-wider ml-1 text-center block">Series</label>
                    <input type="number" placeholder="0" value="${item.series}" 
                        onchange="window.updateField('${day}', ${index}, 'series', this.value)"
                        class="w-full bg-gray-800/50 border border-transparent rounded-lg text-red-500 font-black text-center focus:ring-1 focus:ring-red-600 focus:bg-gray-800 text-sm py-1.5">
                </div>
                
                <div class="col-span-3 md:col-span-2">
                    <label class="text-[9px] text-gray-500 uppercase font-bold tracking-wider ml-1 text-center block">Reps</label>
                    <input type="number" placeholder="0" value="${item.reps}" 
                        onchange="window.updateField('${day}', ${index}, 'reps', this.value)"
                        class="w-full bg-gray-800/50 border border-transparent rounded-lg text-white font-black text-center focus:ring-1 focus:ring-red-600 focus:bg-gray-800 text-sm py-1.5">
                </div>

                <div class="col-span-4 md:col-span-2">
                    <label class="text-[9px] text-gray-500 uppercase font-bold tracking-wider ml-1 text-center block">Peso (Kg)</label>
                    <input type="number" placeholder="0" value="${weightVal}" 
                        onchange="window.updateField('${day}', ${index}, 'weight', this.value)"
                        class="w-full bg-gray-800/50 border border-transparent rounded-lg text-blue-400 font-black text-center focus:ring-1 focus:ring-blue-500 focus:bg-gray-800 text-sm py-1.5">
                </div>

                <div class="col-span-2 md:col-span-1 flex justify-end pb-1.5">
                    <button onclick="window.removeExercise('${day}', ${index})" class="text-gray-600 hover:text-red-500 transition-colors bg-white/5 p-1.5 rounded-md hover:bg-white/10">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                    </button>
                </div>
            `;
            list.appendChild(div);
        });
    }

    // --- CORRECCIÓN DE TYPESCRIPT (SOLUCIÓN AL ERROR) ---
    // Usamos (window as any) para decirle a TS que ignore la comprobación de tipos
    // en estas propiedades personalizadas.
    
    (window as any).addExercise = (day) => {
        bitacoraData[day].push({ name: '', series: '', reps: '', weight: '' });
        renderBitacora();
    };

    (window as any).removeExercise = (day, index) => {
        bitacoraData[day].splice(index, 1);
        renderBitacora();
    };

    (window as any).updateField = (day, index, field, value) => {
        bitacoraData[day][index][field] = value;
    };

    // GUARDAR O ACTUALIZAR EN BD
    document.getElementById('btn-save')?.addEventListener('click', async () => {
        // Casteamos el botón para evitar otro error de "possibly null"
        const btn = document.getElementById('btn-save') as HTMLButtonElement;
        const originalContent = btn.innerHTML;
        
        const method = isUpdate ? 'PUT' : 'POST';

        try {
            btn.innerHTML = '<span class="animate-spin mr-2">⟳</span> Guardando...';
            btn.disabled = true;
            btn.classList.add('opacity-70');

            const res = await fetch(`${API_URL}/bitacora/${user.id}`, {
                method: method,
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ content: bitacoraData })
            });

            if (res.ok) {
                btn.innerHTML = '<span class="text-green-600 mr-2">✓</span> ¡Listo!';
                setTimeout(() => {
                    alert(`¡Progreso ${isUpdate ? 'actualizado' : 'guardado'} exitosamente!`);
                    btn.innerHTML = originalContent;
                    btn.disabled = false;
                    btn.classList.remove('opacity-70');
                }, 500);
                isUpdate = true; 
            } else {
                alert('Error al guardar. Intenta nuevamente.');
                btn.innerHTML = originalContent;
                btn.disabled = false;
            }
        } catch (error) {
            console.error(error);
            alert('Error de conexión con el servidor');
            btn.innerHTML = originalContent;
            btn.disabled = false;
        } 
    });

    loadBitacora();
</script>