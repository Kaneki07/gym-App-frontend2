---
export const prerender = false;
import Layout from '../layouts/Layout.astro';
---

<Layout title="Mi Perfil Profesional | Gym App">
  <div class="min-h-screen flex items-center justify-center px-4 py-12 relative overflow-hidden">
    
    <div class="absolute top-0 left-0 w-full h-full overflow-hidden -z-10">
        <div class="absolute top-[-10%] left-[-10%] w-[500px] h-[500px] bg-red-600 rounded-full blur-[150px] opacity-10"></div>
        <div class="absolute bottom-[-10%] right-[-10%] w-[500px] h-[500px] bg-blue-600 rounded-full blur-[150px] opacity-10"></div>
    </div>

    <div class="w-full max-w-4xl bg-black/80 backdrop-blur-xl border border-white/10 p-8 md:p-12 rounded-[3rem] shadow-2xl relative">
        
        <header class="mb-10 text-center">
            <h1 class="text-4xl md:text-5xl font-black text-white italic uppercase tracking-tighter mb-2">
                Perfil de <span class="text-red-600">Entrenador</span>
            </h1>
            <p class="text-gray-400 text-sm md:text-base">
                Esta información será visible para todos los clientes en la sección de ranking y detalles.
            </p>
        </header>

        <form id="profile-form" class="grid grid-cols-1 md:grid-cols-2 gap-8">
            
            <div class="space-y-6">
                
                <div class="flex flex-col items-center justify-center">
                    <div class="w-40 h-40 rounded-full border-4 border-red-600/50 overflow-hidden bg-zinc-900 shadow-[0_0_30px_rgba(220,38,38,0.3)] mb-4 relative group cursor-pointer">
                        <img id="preview-image" src="https://via.placeholder.com/150" alt="Foto de perfil" class="w-full h-full object-cover">
                        <label for="profileImage" class="absolute inset-0 bg-black/60 flex flex-col items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity cursor-pointer">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white mb-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" />
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                            <span class="text-[10px] font-bold text-white uppercase">Subir Foto</span>
                        </label>
                    </div>
                    <span class="text-xs text-gray-500 uppercase tracking-widest">Foto de Perfil</span>
                    <input type="file" id="profileImage" name="profileImage" accept="image/*" class="hidden">
                </div>

                <div class="space-y-4">
                    <div>
                        <label class="block text-xs font-black text-gray-400 uppercase tracking-widest mb-2 ml-1">Nombre Público</label>
                        <input type="text" id="name" name="name" class="w-full bg-zinc-900/50 border border-white/10 focus:border-red-600 rounded-xl px-5 py-4 text-white placeholder-gray-600 outline-none transition-all font-medium" placeholder="Tu nombre completo">
                    </div>
                    
                    <div>
                        <label class="block text-xs font-black text-gray-400 uppercase tracking-widest mb-2 ml-1">Años de Experiencia / Títulos</label>
                        <input type="text" id="experience" name="experience" class="w-full bg-zinc-900/50 border border-white/10 focus:border-red-600 rounded-xl px-5 py-4 text-white placeholder-gray-600 outline-none transition-all font-medium" placeholder="Ej: 5 años, Especialista en Hipertrofia">
                    </div>

                    <div>
                        <label class="block text-xs font-black text-green-500 uppercase tracking-widest mb-2 ml-1">WhatsApp (Con código de país)</label>
                        <input type="text" id="phone" name="phone" class="w-full bg-zinc-900/50 border border-white/10 focus:border-green-600 rounded-xl px-5 py-4 text-white placeholder-gray-600 outline-none transition-all font-medium" placeholder="Ej: 584121234567">
                    </div>
                    
                    <div>
                        <label class="block text-xs font-black text-pink-500 uppercase tracking-widest mb-2 ml-1">Instagram</label>
                        <input type="text" id="instagram" name="instagram" class="w-full bg-zinc-900/50 border border-white/10 focus:border-pink-600 rounded-xl px-5 py-4 text-white placeholder-gray-600 outline-none transition-all font-medium" placeholder="Ej: @tu_usuario o link completo">
                    </div>
                </div>
            </div>

            <div class="space-y-6">
                <div>
                    <label class="block text-xs font-black text-gray-400 uppercase tracking-widest mb-2 ml-1">Biografía / Sobre Mí</label>
                    <textarea id="description" name="description" rows="16" class="w-full bg-zinc-900/50 border border-white/10 focus:border-red-600 rounded-xl px-5 py-4 text-white placeholder-gray-600 outline-none transition-all font-medium resize-none" placeholder="Describe tu metodología, logros y qué pueden esperar tus clientes de ti..."></textarea>
                </div>
            </div>

            <div class="md:col-span-2 mt-4">
                <button type="submit" id="submit-btn" class="w-full bg-red-600 hover:bg-red-700 text-white font-black uppercase tracking-widest py-5 rounded-xl shadow-[0_0_20px_rgba(220,38,38,0.4)] hover:shadow-[0_0_40px_rgba(220,38,38,0.6)] hover:scale-[1.01] transition-all transform active:scale-95 text-sm md:text-base">
                    Guardar Cambios
                </button>
                <div id="msg-box" class="mt-4 text-center text-sm font-bold hidden p-3 rounded-lg"></div>
            </div>

        </form>

        <div class="mt-8 text-center">
             <a href="/dashboard" class="text-gray-500 hover:text-white text-xs font-black uppercase tracking-widest transition-colors border-b border-transparent hover:border-red-600 pb-1">← Volver al Panel</a>
        </div>
    </div>
  </div>
</Layout>

<script>
    const BACKEND_URL = "https://gym-app-backend-2-pv91.onrender.com";
    const token = localStorage.getItem('token');
    const user = JSON.parse(localStorage.getItem('user') || '{}');
    const msgBox = document.getElementById('msg-box');
    const imgInput = document.getElementById('profileImage') as HTMLInputElement;
    const imgPreview = document.getElementById('preview-image') as HTMLImageElement;

    if (!token || user.role !== 'coach') {
        window.location.href = '/dashboard';
    }

    // 1. Cargar datos actuales
    async function loadProfile() {
        try {
            const res = await fetch(`${BACKEND_URL}/users/${user.id}`, {
                method: 'GET',
                headers: { 'Authorization': `Bearer ${token}` }
            });

            const data = await res.json();

            if (data.code === 200) {
                const u = data.data;
                // Campos de Texto
                (document.getElementById('name') as HTMLInputElement).value = u.name || '';
                (document.getElementById('experience') as HTMLInputElement).value = u.experience || '';
                (document.getElementById('description') as HTMLTextAreaElement).value = u.description || '';
                
                // Nuevos campos de contacto
                (document.getElementById('phone') as HTMLInputElement).value = u.phone || '';
                (document.getElementById('instagram') as HTMLInputElement).value = u.instagram || '';

                // Imagen
                if (u.profileImage) {
                    imgPreview.src = u.profileImage.startsWith('http') 
                        ? u.profileImage 
                        : `${BACKEND_URL}${u.profileImage}`;
                }
            }
        } catch (error) {
            console.error("Error cargando perfil:", error);
        }
    }

    loadProfile();

    // 2. Previsualizar imagen LOCALMENTE antes de subir
    imgInput?.addEventListener('change', () => {
        const file = imgInput.files?.[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = (e) => {
                imgPreview.src = e.target?.result as string;
            };
            reader.readAsDataURL(file);
        }
    });

    // 3. Enviar Formulario usando FormData
    document.getElementById('profile-form')?.addEventListener('submit', async (e) => {
        e.preventDefault();
        const btn = document.getElementById('submit-btn') as HTMLButtonElement;
        
        btn.innerText = "Guardando...";
        btn.disabled = true;

        const formData = new FormData();
        formData.append('name', (document.getElementById('name') as HTMLInputElement).value);
        formData.append('experience', (document.getElementById('experience') as HTMLInputElement).value);
        formData.append('description', (document.getElementById('description') as HTMLTextAreaElement).value);
        
        // Agregar nuevos campos de contacto
        formData.append('phone', (document.getElementById('phone') as HTMLInputElement).value);
        formData.append('instagram', (document.getElementById('instagram') as HTMLInputElement).value);
        
        // Imagen
        if (imgInput.files?.[0]) {
            formData.append('profileImage', imgInput.files[0]);
        }

        try {
            const res = await fetch(`${BACKEND_URL}/users/${user.id}`, {
                method: 'PUT',
                headers: {
                    'Authorization': `Bearer ${token}`
                    // No poner Content-Type manual con FormData
                },
                body: formData 
            });

            const result = await res.json();

            if (msgBox) {
                msgBox.classList.remove('hidden');
                if (result.code === 200) {
                    msgBox.className = "mt-4 text-center text-sm font-bold p-3 rounded-lg bg-green-500/20 text-green-400 border border-green-500/50";
                    msgBox.innerText = "✅ Perfil actualizado correctamente";
                    
                    user.name = result.data.name;
                    user.profileImage = result.data.profileImage;
                    localStorage.setItem('user', JSON.stringify(user));

                    setTimeout(() => location.reload(), 1500);

                } else {
                    msgBox.className = "mt-4 text-center text-sm font-bold p-3 rounded-lg bg-red-500/20 text-red-400 border border-red-500/50";
                    msgBox.innerText = "❌ Error: " + result.message;
                }
            }
        } catch (error) {
            console.error("Error en la petición:", error);
            if (msgBox) {
                msgBox.classList.remove('hidden');
                msgBox.innerText = "❌ Error de conexión con el servidor";
            }
        } finally {
            btn.innerText = "GUARDAR CAMBIOS";
            btn.disabled = false;
        }
    });
</script>