<style>
  /* --- Splash Screen --- */
  .splash-text { animation: splashZoom 0.8s ease-out forwards; }
  .splash-line { width: 0; animation: lineGrow 0.6s 0.4s ease-out forwards; }
  @keyframes splashZoom { 0% { opacity: 0; transform: scale(0.9); } 100% { opacity: 1; transform: scale(1); } }
  @keyframes lineGrow { from { width: 0; } to { width: 100%; } }
  .fade-out-splash { opacity: 0; visibility: hidden; transition: opacity 0.6s ease-in-out, visibility 0.6s; }

  /* --- Typing Effect --- */
  .typing-container {
    display: inline-block;
    vertical-align: bottom;
    overflow: hidden;
    white-space: nowrap;
    border-right: 4px solid #dc2626;
    width: 0;
    animation: 
      typingAnimation 2s steps(6) 2.5s forwards, 
      cursorBlink 0.7s step-end 6 forwards; 
  }

  @keyframes typingAnimation {
    from { width: 0; }
    to { width: 6.2ch; }
  }

  @keyframes cursorBlink {
    0%, 100% { border-color: transparent; }
    50% { border-color: #dc2626; }
  }

  /* --- Animaci√≥n al Bajar (Scroll Reveal) --- */
  .reveal-on-scroll {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s cubic-bezier(0.2, 1, 0.3, 1);
  }

  .reveal-on-scroll.active {
    opacity: 1;
    transform: translateY(0);
  }
</style>

<script>
  // Funci√≥n para obtener usuarios del backend
  async function fetchUserCount() {
    try {
        const response = await fetch('https://gym-app-backend-2-pv91.onrender.com/users/count');
        const data = await response.json();
        
        if (data.code === 200) {
            const countElement = document.getElementById('count-display');
            if (countElement) {
                countElement.innerText = data.data.count;
            }
        }
    } catch (error) {
        console.error("No se pudo obtener el contador de usuarios:", error);
        const countElement = document.getElementById('count-display');
        if(countElement) countElement.innerText = "0";
    }
  }

  function initPage() {
    const token = localStorage.getItem('token');
    
    if (token) {
        window.location.href = '/dashboard';
        return; 
    }

    const splash = document.getElementById('splash-screen');
    const mainContent = document.getElementById('main-content');

    fetchUserCount();

    setTimeout(() => {
      if (splash) splash.classList.add('fade-out-splash');
      if (mainContent) {
        mainContent.classList.remove('opacity-0');
        mainContent.classList.add('opacity-100');
      }
      
      initScrollReveal();
    }, 2000);
  }

  function initScrollReveal() {
    const observerOptions = {
      threshold: 0.15 
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('active');
          observer.unobserve(entry.target);
        }
      });
    }, observerOptions);

    const targets = document.querySelectorAll('.reveal-on-scroll');
    targets.forEach(target => observer.observe(target));
  }

  document.addEventListener('DOMContentLoaded', initPage);
</script>