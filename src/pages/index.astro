<style>
  /* --- Splash Screen Animations --- */
  .splash-text {
    animation: splashZoom 0.8s ease-out forwards;
  }

  .splash-line {
    width: 0;
    animation: lineGrow 0.6s 0.4s ease-out forwards;
  }

  @keyframes splashZoom {
    0% { opacity: 0; transform: scale(0.9); }
    100% { opacity: 1; transform: scale(1); }
  }

  @keyframes lineGrow {
    from { width: 0; }
    to { width: 100%; }
  }

  .fade-out-splash {
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.6s ease-in-out, visibility 0.6s;
  }

  /* --- Typing Effect "Fuerza" --- */
  .typing-container {
    display: inline-block;
    vertical-align: bottom;
    overflow: hidden;
    white-space: nowrap;
    border-right: 4px solid #dc2626;
    width: 0;
    animation: 
      typingAnimation 3s steps(6) infinite,
      cursorBlink 0.7s step-end infinite;
  }

  @keyframes typingAnimation {
    0%, 10% { width: 0; }
    50%, 80% { width: 6.2ch; }
    90%, 100% { width: 0; }
  }

  @keyframes cursorBlink {
    50% { border-color: transparent; }
  }
</style>

<script>
  function initPage() {
    const splash = document.getElementById('splash-screen');
    const mainContent = document.getElementById('main-content');

    // Desvanecer splash tras 2 segundos
    setTimeout(() => {
      if (splash) splash.classList.add('fade-out-splash');
      if (mainContent) {
        mainContent.classList.remove('opacity-0');
        mainContent.classList.add('opacity-100');
      }
    }, 2000);
  }

  // Se ejecuta al cargar el DOM
  document.addEventListener('DOMContentLoaded', initPage);
</script>