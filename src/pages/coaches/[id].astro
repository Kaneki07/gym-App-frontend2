---
// 1. Desactivamos pre-renderizado para rutas din√°micas
export const prerender = false;
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Perfil del Coach | Gym App">
    <div id="coach-content" class="max-w-6xl mx-auto px-6 py-12 hidden">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-12">
            
            <div class="lg:col-span-4">
                <div class="sticky top-12">
                    <div class="rounded-[3rem] overflow-hidden border-4 border-red-600/20 shadow-2xl mb-8">
                        <img id="c-image" src="" class="w-full aspect-[3/4] object-cover" />
                    </div>
                    
                    <div class="bg-zinc-900 rounded-[2rem] p-8 border border-white/5 mb-6">
                        <div class="text-center mb-6">
                            <div id="c-rating-stars" class="text-3xl mb-2">‚≠ê‚≠ê‚≠ê‚≠ê‚≠ê</div>
                            <div class="text-4xl font-black text-white italic"><span id="c-rating-num">0.0</span></div>
                            <p class="text-[10px] text-gray-500 uppercase font-black tracking-[0.3em]">Puntuaci√≥n Media</p>
                        </div>
                        <div class="space-y-4">
                            <div class="flex justify-between text-sm border-b border-white/5 pb-2">
                                <span class="text-gray-500">Rese√±as</span>
                                <span id="c-total-reviews" class="text-white font-bold">0</span>
                            </div>
                            <div class="flex justify-between text-sm">
                                <span class="text-gray-500">Experiencia</span>
                                <span id="c-exp" class="text-red-600 font-bold uppercase italic">--</span>
                            </div>
                        </div>
                    </div>

                    <div class="bg-zinc-900 rounded-[2rem] p-8 border border-white/5">
                        <h3 class="text-xs font-black text-red-600 uppercase tracking-[0.4em] mb-6 text-center">Contacto Directo</h3>
                        
                        <div class="space-y-4">
                            <div class="grid gap-3">
                                <a id="c-whatsapp-btn" href="#" target="_blank" class="hidden flex items-center justify-center gap-2 bg-green-600 hover:bg-green-500 text-white text-[10px] font-black uppercase py-3 rounded-xl transition-all tracking-widest shadow-lg shadow-green-900/20">
                                    <span class="text-lg">üí¨</span> <span>WhatsApp</span>
                                </a>
                                
                                <a id="c-instagram-btn" href="#" target="_blank" class="hidden flex items-center justify-center gap-2 bg-gradient-to-r from-purple-600 to-pink-600 hover:opacity-90 text-white text-[10px] font-black uppercase py-3 rounded-xl transition-all tracking-widest shadow-lg shadow-purple-900/20">
                                    <span class="text-lg">üì∏</span> <span>Instagram</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="lg:col-span-8">
                <h1 id="c-name" class="text-6xl md:text-8xl font-black text-white uppercase italic tracking-tighter leading-none mb-6">---</h1>
                
                <div class="mb-12">
                    <h2 class="text-xs font-black text-red-600 uppercase tracking-[0.4em] mb-4">Sobre el Coach</h2>
                    <p id="c-desc" class="text-xl text-gray-300 leading-relaxed font-medium italic">...</p>
                </div>

                <hr class="border-white/5 mb-12" />

                <section class="mb-12 bg-red-600/5 p-8 rounded-[2rem] border border-red-600/20">
                    <h3 class="text-2xl font-black text-white uppercase italic mb-6">¬øEntrenaste con este coach?</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <select id="rev-stars" class="bg-black text-white p-4 rounded-xl border border-white/10 outline-none">
                            <option value="5">‚≠ê‚≠ê‚≠ê‚≠ê‚≠ê Excelente</option>
                            <option value="4">‚≠ê‚≠ê‚≠ê‚≠ê Muy Bueno</option>
                            <option value="3">‚≠ê‚≠ê‚≠ê Regular</option>
                            <option value="2">‚≠ê‚≠ê Malo</option>
                            <option value="1">‚≠ê P√©simo</option>
                        </select>
                        <button id="btn-send-review" class="bg-red-600 text-white font-black uppercase tracking-widest rounded-xl hover:bg-white hover:text-red-600 transition-all">Enviar Valoraci√≥n</button>
                        <textarea id="rev-comment" placeholder="Escribe un breve comentario..." class="md:col-span-2 bg-black text-white p-4 rounded-xl border border-white/10 h-24 outline-none"></textarea>
                    </div>
                </section>

                <section>
                    <h3 class="text-xl font-black text-white uppercase tracking-widest mb-8 italic">Comentarios de la Comunidad</h3>
                    <div id="reviews-list" class="space-y-6">
                        </div>
                </section>
            </div>
        </div>
    </div>
</Layout>

<script>
    const BACKEND_URL = "https://gym-app-backend-2-pv91.onrender.com";
    const coachId = window.location.pathname.split('/').pop();
    const user = JSON.parse(localStorage.getItem('user') || '{}');
    const container = document.getElementById('coach-content');

    async function loadCoachDetail() {
        try {
            const res = await fetch(`${BACKEND_URL}/coaches/${coachId}`);
            if (!res.ok) throw new Error(`Error de conexi√≥n: ${res.status}`);
            const result = await res.json();

            if (result.code === 200) {
                const c = result.data;

                setText('c-name', c.name);
                setText('c-desc', c.description || 'Sin biograf√≠a disponible.');
                setText('c-exp', c.experience || 'No especificada');
                setText('c-rating-num', c.rating);
                setText('c-total-reviews', c.reviewCount);

                const img = document.getElementById('c-image') as HTMLImageElement;
                if (img) {
                    if (c.profileImage) {
                        img.src = c.profileImage.startsWith('http') ? c.profileImage : `${BACKEND_URL}${c.profileImage}`;
                    } else {
                        img.src = 'https://via.placeholder.com/400?text=Sin+Foto';
                    }
                }

                // --- L√ìGICA DE CONTACTO AJUSTADA ---
                
                // WhatsApp
                const waBtn = document.getElementById('c-whatsapp-btn') as HTMLAnchorElement;
                if (waBtn) {
                    if (c.phone) {
                        const cleanPhone = c.phone.replace(/\D/g, '');
                        waBtn.href = `https://wa.me/${cleanPhone}`;
                        waBtn.classList.remove('hidden');
                        waBtn.classList.add('flex'); 
                    } else {
                        waBtn.classList.add('hidden');
                    }
                }

                // Instagram
                const igBtn = document.getElementById('c-instagram-btn') as HTMLAnchorElement;
                if (igBtn) {
                    if (c.instagram) {
                        const igLink = c.instagram.startsWith('http') 
                            ? c.instagram 
                            : `https://instagram.com/${c.instagram.replace('@', '')}`;
                        igBtn.href = igLink;
                        igBtn.classList.remove('hidden');
                        igBtn.classList.add('flex');
                    } else {
                        igBtn.classList.add('hidden');
                    }
                }

                container?.classList.remove('hidden');
                loadReviews();

            } else {
                alert(result.message || "No se encontr√≥ el coach");
                window.location.href = '/users';
            }

        } catch (e) {
            console.error("Error cr√≠tico:", e);
            container?.classList.remove('hidden');
        }
    }

    async function loadReviews() {
        try {
            const res = await fetch(`${BACKEND_URL}/reviews/coach/${coachId}`);
            const result = await res.json();
            const list = document.getElementById('reviews-list');

            if (result.code === 200 && list) {
                if (result.data.length === 0) {
                    list.innerHTML = `<p class="text-gray-500 italic text-sm">A√∫n no hay rese√±as. ¬°S√© el primero!</p>`;
                } else {
                    list.innerHTML = result.data.map((r: any) => `
                        <div class="bg-zinc-900/50 p-6 rounded-2xl border border-white/5 shadow-sm">
                            <div class="flex justify-between mb-2">
                                <span class="text-yellow-500 text-xs tracking-widest">${"‚≠ê".repeat(r.stars)}</span>
                                <span class="text-[10px] text-gray-500 uppercase font-bold tracking-wider">
                                    ${new Date(r.createdAt).toLocaleDateString()}
                                </span>
                            </div>
                            <p class="text-gray-300 text-sm italic leading-relaxed">"${r.comment || 'Sin comentario'}"</p>
                        </div>
                    `).join('');
                }
            }
        } catch (error) {
            console.error("Error cargando reviews:", error);
        }
    }

    document.getElementById('btn-send-review')?.addEventListener('click', async () => {
        const starsElem = document.getElementById('rev-stars') as HTMLSelectElement;
        const commentElem = document.getElementById('rev-comment') as HTMLTextAreaElement;
        if (!user.id) return alert("Debes iniciar sesi√≥n para calificar.");
        if (!starsElem || !commentElem) return;

        try {
            const res = await fetch(`${BACKEND_URL}/reviews`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    stars: parseInt(starsElem.value),
                    comment: commentElem.value,
                    coachId: coachId,
                    clientId: user.id
                })
            });
            const data = await res.json();
            alert(data.message);
            if (data.code === 201) location.reload(); 
        } catch (error) {
            alert("Error al enviar la rese√±a.");
        }
    });

    function setText(id: string, text: string) {
        const el = document.getElementById(id);
        if (el) el.textContent = text;
    }

    loadCoachDetail();
</script>